{
  "root": true,
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 8
  },
  "rules": {
    "semi": [ 2, "never" ],
    "no-undefined": "error",
    "no-console": "off"
  },
  "env": {
    "es6": true,
    "browser": true,
    "mocha": true,
    "node": true
  }
}
